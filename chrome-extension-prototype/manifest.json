{
    "manifest_version": 3,
    "name": "Localhost UI Commentor",
    "version": "1.0",
    "description": "Prototype for commenting on localhost elements.",
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost/*",
        "http://127.0.0.1/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://localhost/*",
                "http://127.0.0.1/*",
                "http://localhost:8080/*",
                "http://127.0.0.1:8080/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}